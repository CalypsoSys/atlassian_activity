    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Collector",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/atlassian_collector",
            "cwd": "${workspaceFolder}",
            "args": ["--config-file", "./config/my_config.ini"]
        },
        {
            "name": "Launch Reporter",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/atlassian_reporter",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "Launch Reporter - Demo",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/atlassian_reporter",
            "cwd": "${workspaceFolder}",
            "args": ["--input", "./output/demo", "--output", "./output/demo"]
        }        
    ]
}